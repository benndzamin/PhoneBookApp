@await Html.PartialAsync("_CreateContactModal")
@await Html.PartialAsync("_DeleteContactModal")
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="mb-0">Contact List</h2>
        <button type="button" class="btn btn-primary p-3 shadow" onclick="openCreateModal()">Add new contact</button>
    </div>

    <div class="table-responsive shadow rounded">
        <table class="table table-hover" id="contactsTable">
            <thead class="table-light border">
                <tr>
                    <th class="p-3">First Name</th>
                    <th class="p-3">Last Name</th>
                    <th class="p-3">Phone Number</th>
                    <th class="p-3">Gender</th>
                    <th class="p-3">Email</th>
                    <th class="p-3">Birth Date</th>
                    <th class="p-3">Age</th>
                    <th class="p-3">City</th>
                    <th class="p-3">Country</th>
                    <th class="p-3">Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <!-- Loading spinner -->
        <div id="loadingIndicator" class="text-center mt-3" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading...</p>
        </div>
    </div>
</div>
