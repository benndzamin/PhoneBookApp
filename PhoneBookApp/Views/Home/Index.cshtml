@await Html.PartialAsync("_CreateContactModal")
@await Html.PartialAsync("_DeleteContactModal")
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="mb-0">Contact List</h2>
        <button type="button" class="btn btn-primary p-3 shadow" onclick="openCreateModal()">Add new contact</button>
    </div>

    <div class="table-responsive shadow rounded">
        <table class="table table-hover" id="contactsTable">
            <thead class="table-light border">
                <tr>
                    <th class="p-3" onclick="sortTable('FirstName')">
                        First Name
                        <span id="firstNameArrow" class="arrow"></span>
                    </th>
                    <th class="p-3" onclick="sortTable('LastName')">
                        Last Name
                        <span id="lastNameArrow" class="arrow"></span>
                    </th>
                    <th class="p-3">Phone Number</th>
                    <th class="p-3">Gender</th>
                    <th class="p-3">Email</th>
                    <th class="p-3">Birth Date</th>
                    <th class="p-3">Age</th>
                    <th class="p-3">City</th>
                    <th class="p-3">Country</th>
                    <th class="p-3">Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <!-- Loading spinner -->
        <div id="loadingIndicator" class="text-center mt-3" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading...</p>
        </div>
        <!--Pagination-->
        <div class="d-flex justify-content-between align-items-center m-3">
            <div>
                <label for="resultsPerPage">Results per page: </label>
                <select id="resultsPerPage" class="form-select d-inline w-auto">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                    <option value="20">20</option>
                </select>
            </div>

            <div>
                <button id="prevPage" class="btn btn-secondary" disabled>Previous</button>
                <span id="currentPage" class="mx-3">Page 1</span>
                <button id="nextPage" class="btn btn-secondary">Next</button>
            </div>
        </div>
    </div>
</div>
